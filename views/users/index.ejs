<div class="default-page">
    <div class="header">
        <h1 id="main-title" class="container"><%= __('A brand new app.') %></h1>
        <h3 class="container">You're looking at: <code><%= view.pathFromApp + '.' +view.ext %></code></h3>
    </div>
    <div class="main container clearfix">
        
        <table class="table table-bordered table-striped table-hover">
        <colgroup span=3>
            <col style="width: 25%" />
            <col style="width: 25%" />
            <col style="width: 25%" />
            <col style="width: 25%" />
        </colgroup>
        <tr>
            <th>
                Name
            </th>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th class="text-right">
                Actions
            </th>
        </tr>
        <% _.each(model, function(user) { %>
        <tr>
            <td>
                <%= user.name %>
            </td>
            <td>
                <%= user.username %>
            </td>
            <td>
                <%= user.email %>
            </td>
            <td class="text-right">
                <a href="users/edit?id=<%= user.id %>" class="popup btn btn-warning btn-sm">
                    Edit
                </a>
                <a href="users/destroy?id=<%= user.id %>" class="btn btn-danger btn-sm">
                    Delete
                </a>
            </td>
        </tr>
        <% }) %>
    </table>
    </div>
    <div class="text-right">
        <a href="users/new" role="button" class="btn btn-primary popup">
            Add New User
        </a>
    </div>
</div>